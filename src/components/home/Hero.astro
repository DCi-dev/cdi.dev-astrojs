<style>
  .back-hero {
    background-image: url("./img/background/bg-hero.svg");
    aspect-ratio: 960/300;
    width: 100%;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
  }
</style>

<section
  class="relative h-screen w-full back-hero bg-neutral-100 dark:bg-neutral-1000 flex justify-center items-start pt-24"
  id="/"
>
  <div
    class="h-full w-full max-w-6xl flex justify-center items-center flex-col sm:flex-row"
  >
    <div class="md:basis-1/2 sm:pl-12 px-4 text-center sm:text-left">
      <h1 class="text-neutral-900 dark:text-neutral-100 font-ubuntu text-5xl">
        Hi there, I'm <span class="magic-text font-squartiqa">CDi</span>!
      </h1>
      <p class="text-neutral-900 dark:text-neutral-100 font-bold text-2xl pt-2">
        A passionate <span class="magic-text">Web Developer</span> who loves building
        things with code
      </p>
      <div class="flex gap-4 py-16 justify-center sm:justify-start">
        <button
          class="basis-1/3 rounded-lg border-2 border-primary-600 px-3 py-2 text-center text-sm font-bold text-neutral-100 outline-none transition duration-300 active:scale-95"
        >
          <a
            href="#contact"
            class="relative flex w-full items-center justify-center"
          >
            <span
              class="text-md font-bold text-neutral-1000 dark:text-neutral-100 md:text-lg font-ubuntu"
              >Resume</span
            >
          </a>
        </button>
        <button
          class="basis-1/3 rounded-lg bg-primary-600 px-3 py-2 text-center text-sm font-bold text-neutral-100 outline-none transition duration-300 active:scale-95"
        >
          <a
            href="#contact"
            class="relative flex w-full items-center justify-center"
          >
            <span
              class="text-md font-bold text-neutral-1000 md:text-lg font-ubuntu"
              >Contact</span
            >
          </a>
        </button>
      </div>
    </div>
    <div
      class="md:basis-1/2 h-full flex justify-center items-end overflow-hidden"
    >
      <img src="/img/hero.svg" alt="hero" class="h-full w-full" />
    </div>
  </div>
</section>
