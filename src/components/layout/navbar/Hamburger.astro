---
const { open } = Astro.props;
---

<div
  x-cloak
  @click="isOpen = !isOpen"
  style={{ zIndex: 1000 }}
  class="sm:hidden"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-6 w-6 transform cursor-pointer select-none rounded-md duration-300 active:scale-50"
    x-show="!isOpen"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width={2}
  >
    <path
      stroke-linecap="round"
      stroke-line-join="round"
      d="M4 6h16M4 12h16M4 18h16"></path>
  </svg>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-6 w-6 transform cursor-pointer select-none rounded-md duration-300 active:scale-50"
    x-show="isOpen"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width={2}
  >
    <path
      stroke-linecap="round"
      troke-line-join="round"
      d="M6 18L18 6M6 6l12 12"></path>
  </svg>
</div>
