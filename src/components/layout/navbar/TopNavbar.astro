---
import Hamburger from "./Hamburger.astro";
import Logo from "./Logo.astro";
import MobileNav from "./MobileNav.astro";
import Nav from "./Nav.astro";
import ThemeToggle from "./ThemeToggle.astro";
---


<header
  x-data="{ isOpen: false }"
  id="header"
  class="bg-neutral-100 dark:bg-neutral-1000 fixed top-0 z-50 flex w-full items-center justify-between px-4 py-[10px] text-neutral-1000 dark:text-neutral-100 print:hidden sm:p-4 sm:px-6"
>
  <Hamburger />
  <MobileNav />
  <Logo />
  <Nav />
  <ThemeToggle />
</header>
