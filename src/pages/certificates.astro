---
import type { Certificate } from "@/lib/types";
import certificatesData from "@content/certificatesData";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Certificates">
  <main class="pageTop">
    <div class="mb-10 flex w-full select-none flex-col gap-3 py-5">
      <h2
        class="font-ubuntu text-4xl font-bold text-neutral-900 dark:text-neutral-200 md:text-5xl"
      >
        Certificates
      </h2>
    </div>

    <div class="flex flex-col gap-8 px-5 font-opensans">
      {
        certificatesData.map((cer: Certificate, index: number) => {
          return (
            <div class="flex flex-col gap-6 rounded-lg bg-neutral-100 p-4 shadow  dark:bg-neutral-1000 md:flex-row md:items-center md:justify-between md:gap-4">
              <div class="flex items-center gap-4">
                <div class="relative flex items-center justify-center">
                  <img
                    width={50}
                    height={50}
                    src={cer.issuedBy.logo}
                    alt={cer.issuedBy.name}
                    object-fit="contain"
                  />
                </div>
                <div class="flex flex-col ">
                  <h3 class="sm:text-md mb-2 text-lg font-semibold text-neutral-900 dark:text-neutral-200 md:text-xl">
                    {cer.title}
                  </h3>
                  <p class="text-md text-gray-500">{cer.issuedBy.name}</p>
                </div>
              </div>
              <div class="flex items-center justify-between gap-6 text-sm">
                <p class="text-md text-gray-500">{cer.issuedDate}</p>

                <a
                  href={cer.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="transform rounded-md bg-neutral-200 px-4 py-1 text-lg font-bold shadow duration-200 active:scale-90 dark:bg-neutral-800  dark:text-neutral-100 lg:hover:bg-neutral-1000 lg:hover:text-neutral-100 dark:lg:hover:bg-neutral-100 dark:lg:hover:text-neutral-1000"
                >
                  View
                </a>
              </div>
            </div>
          );
        })
      }
    </div>
  </main>
</Layout>

<style></style>
